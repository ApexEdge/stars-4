---
interface Props {
  url: string;
  imgSrc: string;
  alt: string;
}

const { url, imgSrc, alt } = Astro.props;
---

<div class="logo-container">
  <a href={url} target="_blank" rel="noopener noreferrer" class="logo-link">
    <img src={imgSrc} alt={alt} class="logo" />
  </a>
</div>

<style>
  .logo-container {
    text-align: center;
    margin: 2rem 0 3rem;
    transition: transform 0.3s ease;
  }

  .logo-link {
    display: inline-block;
    position: relative;
    padding: 1rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.1),
      0 4px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .logo-link:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 15px 35px rgba(0, 0, 0, 0.15),
      0 5px 10px rgba(0, 0, 0, 0.08);
  }

  .logo {
    max-width: 220px;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .logo {
      max-width: 180px;
    }
  }
</style>